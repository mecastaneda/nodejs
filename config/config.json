{







    "specialization": {
    },

    "middleware": {

      "appsec": {
            "priority": 110,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": {"key": "x-xsrf-token", "header": "_csrf"},
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },

        "static": {
            "module": {
                "arguments": [ "path:./public" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
